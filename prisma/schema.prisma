generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  discordUserId String @unique
  characters Character[]
}

model Character {
  id  Int @id @default(autoincrement())
  name String
  slug String @unique
  imageUrl String?
  strength Int
  dexterity Int
  knowledge Int
  psyche Int
  face Int
  maxHp Int @default(0)
  currentHp Int @default(0)
  maxSp Int @default(0)
  currentSp Int @default(0)
  defense Int @default(4)
  user User @relation(fields: [userId], references: [id])
  userId Int
  attacks Attack[]
}

model Attack {
  id Int @id @default(autoincrement())
  name String
  slug String @unique
  imageUrl String?
  power Int
  totalCoins Int
  coinPower Int
  coinDamage Int
  character Character @relation(fields: [characterId], references: [id])
  characterId Int
}